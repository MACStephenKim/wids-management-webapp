extends layout

block content
  h1= title
  p Welcome to #{title}
  div(ng-app="angularindex")
        div(ng-controller="indexController")
            nav.navbar.navbar-toggleable-md.navbar-light.bg-faded
                #navbarSupportedContent.collapse.navbar-collapse
                  ul.nav.nav-tabs
                    //- .navbar.navbar-inverse.navbar-static-top(role='navigation')
                    //-   .container
                    //-     .collapse.navbar-collapse
                    //-       ul.nav.navbar-nav 
                    li.nav-item.active
                      a.nav-link(href='/')
                        |  Home
                    li.nav-item
                      a.nav-link(href='/restrooms')
                        |  Restrooms
                    li.nav-item
                      a.nav-link(href='/statuses')
                        |  Statuses
                    li.nav-item
                      a.nav-link(href='/headcounts')
                        |  Headcounts
                    li.nav-item
                      a.nav-link(href='/actions')
                        |  Actions
            if isAuthenticated
                if (typeof(newmessage) === 'undefined')
                  | Welcome user:
                  | &nbsp;
                  = username
            else
              | Welcome! Sign in to add and update tables
            if (typeof(newmessage) !== 'undefined')
              | #{newmessage}
            br
            br
            a(ng-show='logged', href='/login')
                |  Log In
            a(ng-show='loggedout', href='/logout')
                |  Log Out


      
