            //Add icon
            a.plus(ng-show='showadd', tooltip='Add more', ng-click='showForm = true; showdelete = false', href='javascript:void(0);', ng-model='skm')
                i.icon-plus
                | + ADD 

            //Search icon
            a.search(tooltip='Add more', ng-click='showSearch = true; removesearch = true', href='javascript:void(0);', ng-model='skm')
                span.glyphicon.glyphicon-search

            // FORM TO CREATE Headcounts
            #todo-form.row
                form.form-group(ng-show='showForm', name="addForm", role='form', novalidate)
                    // BIND THIS VALUE TO formData IN ANGULAR
                    label Inbound Timestamp
                        | &nbsp;
                        label(ng-class='{red : true}') 
                            |*
                    br
                    input(type='datetime-local', name='timestamp', ng-model='formData.timestamp', required)
                    .custom-error(ng-show='addForm.timestamp.$dirty && addForm.timestamp.$invalid') Invalid: Inbound Timestamp is required. 
                    br
                    br 
                    label Door Number
                        | &nbsp;
                        label(ng-class='{red : true}') 
                            |*
                    input.form-control.input-lg(type='text', name='door', ng-model='formData.door_number', placeholder='Door number', required)
                    .custom-error(ng-show='addForm.door.$dirty && addForm.door.$invalid') Invalid: 
                        span(ng-show='addForm.door.$error.required') Door Number is required. 
                    label Head Count
                        | &nbsp;
                        label(ng-class='{red : true}') 
                            |*
                    br
                    input.input-lg.text-center(type='number', name='headcount', ng-model='formData.headcount', placeholder='0', required)
                    .custom-error(ng-show='addForm.headcount.$dirty && addForm.headcount.$invalid') Invalid: 
                        span(ng-show='addForm.headcount.$error.required') Head Count is required. 
                    br
                    br
                    label Update User
                        | &nbsp;
                        label(ng-class='{red : true}') 
                            |*
                    input.form-control.input-lg(type='text', name='user', ng-model='formData.update_user', placeholder='User', required)
                    .custom-error(ng-show='addForm.user.$dirty && addForm.user.$invalid') Invalid: 
                        span(ng-show='addForm.user.$error.required') Update User is required. 
                    
                    // createstatus() WILL CREATE NEW headcount
                    button.btn.btn-primary.btn-lg(type='submit', ng-click='createHeadcount()', ng-disabled='addForm.timestamp.$dirty && addForm.timestamp.$invalid || addForm.door.$pristine || addForm.door.$dirty && addForm.door.$invalid || addForm.headcount.$pristine || addForm.headcount.$dirty && addForm.headcount.$invalid || addForm.user.$pristine || addForm.user.$dirty && addForm.user.$invalid') Add
                    button.btn.btn-primary.btn-lg(type='submit', ng-click='cancelHeadcount()') Cancel

            // FORM TO Update headcount
            #todo-form.row
                form.form-group(ng-show='IsVisible', name='updateForm', role='form', novalidate)
                    // BIND THIS VALUE TO formData IN ANGULAR
                    label Inbound Timestamp
                        | &nbsp;
                        label(ng-class='{red : true}') 
                            |*
                    br
                    input(type='datetime-local', name='timestamp', ng-model='formupData.timestamp', required)
                    .custom-error(ng-show='updateForm.timestamp.$dirty && updateForm.timestamp.$invalid') Invalid: Timestamp is required.  
                    br
                    br 
                    label Door Number
                        | &nbsp;
                        label(ng-class='{red : true}') 
                            |*
                    input.form-control.input-lg(type='text', name='door', ng-model='formupData.door_number', required)
                    .custom-error(ng-show='updateForm.door.$dirty && updateForm.door.$invalid') Invalid: 
                        span(ng-show='updateForm.door.$error.required') Door Number is required.
                    label Head Count
                        | &nbsp;
                        label(ng-class='{red : true}') 
                            |*
                    br
                    input.input-lg.text-center(type='number', name='headcount', ng-model='formupData.headcount', required)
                    .custom-error(ng-show='updateForm.headcount.$dirty && updateForm.headcount.$invalid') Invalid: 
                        span(ng-show='updateForm.headcount.$error.required') Head Count is required. 
                    br
                    br
                    label Update User
                        | &nbsp;
                        label(ng-class='{red : true}') 
                            |*
                    input.form-control.input-lg(type='text', name='user', ng-model='formupData.update_user', required)
                    .custom-error(ng-show='updateForm.user.$dirty && updateForm.user.$invalid') Invalid: 
                        span(ng-show='updateForm.user.$error.required') Update User is required. 
                    
                    // updatestatus() WILL UPDATE headcount
                    button.btn.btn-primary.btn-lg(type='submit', ng-click='updateHeadcount(formupData)', ng-disabled='updateForm.timestamp.$dirty && updateForm.timestamp.$invalid || updateForm.door.$dirty && updateForm.door.$invalid || updateForm.headcount.$dirty && updateForm.headcount.$invalid || updateForm.user.$dirty && updateForm.user.$invalid') Update
                    button.btn.btn-primary.btn-lg(type='submit', ng-click='cancelupdateHeadcount()') Cancel
            br
            #restroomList
                div
                    label(ng-show='showSearch')
                        | Search
                        | &nbsp;
                        input(ng-model='searchKeyword')
                        | &nbsp;
                        a#search(ng-show='removesearch', tooltip='Add more', ng-click='showSearch = false; removeserach = false; searchClear()', href='javascript:void(0);', ng-model='skm')
                            i.icon-plus
                            | X
                // /SEARCH CONTAINER
                table
                    thead
                        tr
                            th
                                a(href='#', ng-click="orderByField='headcount_id'; reverseSort = !reverseSort")
                                            | Headcount ID
                                            span(ng-show="orderByField == 'headcount_id'")
                                                span.glyphicon.glyphicon-arrow-up(ng-show='!reverseSort')
                                                span.glyphicon.glyphicon-arrow-down(ng-show='reverseSort')
                            th 
                                a(href='#', ng-click="orderByField='headcount'; reverseSort = !reverseSort")
                                            | Headcount
                                            span(ng-show="orderByField == 'headcount'")
                                                span.glyphicon.glyphicon-arrow-up(ng-show='!reverseSort')
                                                span.glyphicon.glyphicon-arrow-down(ng-show='reverseSort')
                            th 
                                a(href='#', ng-click="orderByField='door_number'; reverseSort = !reverseSort")
                                            | Door Number
                                            span(ng-show="orderByField == 'door_number'")
                                                span.glyphicon.glyphicon-arrow-up(ng-show='!reverseSort')
                                                span.glyphicon.glyphicon-arrow-down(ng-show='reverseSort')
                            th
                                a(href='#', ng-click="orderByField='update_date'; reverseSort = !reverseSort")
                                            | Update Date
                                            span(ng-show="orderByField == 'update_date'")
                                                span.glyphicon.glyphicon-arrow-up(ng-show='!reverseSort')
                                                span.glyphicon.glyphicon-arrow-down(ng-show='reverseSort')
                            th 
                                a(href='#', ng-click="orderByField='timestamp'; reverseSort = !reverseSort")
                                            | Timestamp
                                            span(ng-show="orderByField == 'timestamp'")
                                                span.glyphicon.glyphicon-arrow-up(ng-show='!reverseSort')
                                                span.glyphicon.glyphicon-arrow-down(ng-show='reverseSort')
                            th 
                                a(href='#', ng-click="orderByField='update_user'; reverseSort = !reverseSort")
                                            | Update User
                                            span(ng-show="orderByField == 'update_user'")
                                                span.glyphicon.glyphicon-arrow-up(ng-show='!reverseSort')
                                                span.glyphicon.glyphicon-arrow-down(ng-show='reverseSort') 
                            th(ng-show='showdelete') Update/Delete
                    
                    tbody
                        tr(ng-repeat='item in headcount = (headcounts | filter: searchKeyword) | orderBy:[orderByField]:reverseSort | startFrom:(currentPage-1)*itemsPerPage | limitTo:itemsPerPage')
                            td 
                                {{item.headcount_id}}
                            td
                                {{item.headcount}}
                            td
                                {{item.door_number}}
                            td
                                {{item.update_date}}
                            td
                                {{item.timestamp}}
                            td
                                {{item.update_user}}
                            td(ng-show='showdelete')
                                a(href='#', ng-click='populateFields(item)')
                                    span.glyphicon.glyphicon-pencil
                                | &nbsp;
                                | &nbsp;  
                                a.paint(ng-click='deleteHeadcount(item)', ng-model="item.isChecked" , tooltip='Add more', href='javascript:void(0);')
                                    i.icon-plus
                                    | X
                
                //Pagination
                | View 
                select(ng-model='viewby', name='amount', ng-change='setItemsPerPage(viewby)')
