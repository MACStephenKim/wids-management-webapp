extends layout

block content
    h1= title
    p Welcome to #{title}
    #todo-form.row
            form.form-group(name="signupForm", action = "/signup", method = "POST")
              label Username
              input.form-control.input-lg(type='text', name='username', placeholder='Username')
              br
              label Password
              input.form-control.input-lg(type='password', name='password', placeholder='Password')          
              button.btn.btn-primary.btn-lg(type='submit') Log In
